[user]
    email = owen.campbell@tanti.org.uk
    name = Owen Campbell
[core]
    excludesfile = /home/owen/.gitignore_global
    editor = nvim
[gpg]
    program = /usr/bin/gpg
[commit]
    gpgsign = true
[alias]
    co = checkout
    br = branch
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
