[user]
    email = owen.campbell@tanti.org.uk
    name = Owen Campbell
[core]
    excludesfile = /home/owen/.gitignore_global
    editor = nvim -u ~/.config/nvim/basic.lua
[gpg]
    program = /usr/bin/gpg
[commit]
    gpgsign = true
    template = /home/owen/dotfiles/git/commit_template.txt
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[init]
	defaultBranch = main
[alias]
    br = branch
    co = checkout
    s = switch
    sm = switch main
    st = status
    ls = log --oneline --decorate --graph
